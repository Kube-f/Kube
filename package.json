{
  "name": "node-seed",
  "version": "0.0.0-development",
  "description": "My template for node modules with lint, tests, code coverage, type checking, CI, semantic release and interoperability between ES6 modules and CommonJs.",
  "main": "./lib/index.js",
  "repository": "git@github.com:MauroJr/node-seed.git",
  "author": "Mauro Junior <mauropereirajr@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "scripts": {
    "start": "npm run test",
    "commit": "git add -A && git-cz && git push",
    "pretest": "npm run build",
    "test": "npm run lint && nyc --check-coverage mocha --compilers js:babel-register ./test/*.js",
    "test:watch": "mocha ./test/*.js --watch",
    "lint": "eslint .",
    "lint:watch": "esw -w --ignore-path .gitignore .",
    "coverage": "nyc report --reporter=text-lcov | codecov",
    "coverage:summary": "nyc report",
    "prebuild": "rimraf lib",
    "build": "tsc && babel src --out-dir lib",
    "setup": "npm install && npm test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "@types/node": "^7.0.14",
    "babel-cli": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.4.0",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "codecov": "^2.1.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "ghooks": "^2.0.0",
    "mocha": "^3.3.0",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.2",
    "typescript": "^2.3.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "lines": 20,
    "statements": 20,
    "functions": 20,
    "branches": 20,
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
